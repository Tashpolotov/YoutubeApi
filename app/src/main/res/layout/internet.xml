<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/imageView_check"
        android:layout_width="228dp"
        android:layout_height="228dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/no_internet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="@string/no_internet_connection"
        android:textSize="30sp"
        android:fontFamily="@font/notosans_regular"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView_check" />

    <TextView
        android:id="@+id/btn_try_again"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:text="@string/try_again"
        android:textSize="30sp"
        android:background="@drawable/btn_try_again"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_check"
        android:backgroundTint="@color/red"/>

</androidx.constraintlayout.widget.ConstraintLayout>